      <div class="main">
        <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>
        </div>
        <div class="container1">
          <div class="admin-Category-form-container">
            <form enctype="multipart/form-data"
              method="post"
            >
              <h3>add details</h3>

              <select name="educetionlevel">
                <option name="educetionlevel" value="" class="placeholder" disabled selected hidden>
                  Education Level
                </option>
                <option name="educetionlevel" value="Secondary">Secondary</option>
                <option name="educetionlevel" value="Preparatory">Preparatory</option>
              </select>
              <br />
              <br />
              <br />
              <select name="grade">
                <option  name="grade" value="" class="placeholder" disabled selected hidden>
                  Grade
                </option>
                <option name="grade" value="1st">1st</option>
                <option name="grade" value="2nd">2nd</option>
                <option name="grade" value="3rd">3rd</option>
              </select>
              <br />
              <br />
              <br />
              <select name="month">
                <option name="month" value="" class="placeholder" disabled selected hidden>
                  Month
                </option>
                <option name="month" value="Month One">Month One</option>
                <option name="month" value="Month Second">Month Second</option>
                <option name="month" value="Month Third">Month Third</option>
                <option name="month" value="Month Fourth">Month Fourth</option>
              </select>
              <br />
              <br />
              <br />
              <select name="unit">
                <option name="unit" value="" class="placeholder" disabled selected hidden>
                  Unit
                </option>
                <option name="unit" value="unit1">unit1</option>
                <option name="unit" value="unit2">unit2</option>
                <option name="unit" value="unit3">unit3</option>
                <option name="unit" value="unit4">unit4</option>
                <option name="unit" value="unit5">unit5</option>
                <option name="unit" value="unit6">unit6</option>
                <option name="unit" value="unit7">unit7</option>
                <option name="unit" value="unit8">unit8</option>
                <option name="unit" value="unit9">unit9</option>
                <option name="unit" value="unit10">unit10</option>
                <option name="unit" value="unit11">unit11</option>
                <option name="unit" value="unit12">unit12</option>
              </select>
              <br />
              <br />
              <br />
              <input
                type="text"
                placeholder="enter link video"
                name="lesson"
                class="box"
              />
              <input type="file"
              name="pdf"
              class="box"
              >
              <input
                type="submit"
                class="btn"
                value="add lesson"
              />
            </form>
          </div>

          <div class="Category-display">
            <table class="Category-display-table">
              <thead>
                <tr>
                  <th>level</th>
                  <th>grade</th>
                  <th>month</th>
                  <th>unit</th>
                  <th>Action</th>

                </tr>
              </thead>
              <%for(i of lesson){%>
                <%for(j of i.units){%>
              <tr>
                <td><%=i.educetionlevel%></td>
                <td><%=i.grade%></td>
                <td><%=i.month%></td>
                <td><%=j.unit%></td>
                <td>
                  <a
                    style="
                      background-color: brown;
                      border-radius: 0.5rem;
                      padding: 0.5rem 0.5rem;
                      color: var(--white);
                    "
                    href="/removelesson/<%=i._id%>/<%=j._id%>"
                    >delete</a
                  >
                </td>

               
              
              </tr>
              <%}%>
              <%}%>
            </table>
          </div>
        </div>
